<% if @posts_campaign.sent? %>
  <h2><%= t('sent', :scope => 'refinery.mailchimp.shared') %></h2>
  <p>
    <%= t('sent', :scope => 'refinery.mailchimp.shared') %> 
  </p>
<% elsif @posts_campaign.scheduled? %>
  <h2><%= t('.campaign_scheduled_title') %></h2>
  <p>
    <%= t('.campaign_scheduled_explanation') %> <strong title="<%= @posts_campaign.scheduled_at %>"><%= distance_of_time_in_words_to_now(@posts_campaign.scheduled_at) %></strong>.
  </p>
  <%= form_tag refinery.unschedule_mailchimp_admin_posts_campaign_path(@posts_campaign) do -%>
    <%= render :partial => "modal_fields" %>
    <%= submit_tag t('.unschedule_campaign') %>
  <% end %>
<% else %>
  <h2><%= t('.send_test_email_title') %></h2>
  <p><%= t('.send_test_email_explanation') %></p>
  <%= form_tag refinery.send_test_mailchimp_admin_posts_campaign_path(@posts_campaign) do -%>
    <%= render :partial => "modal_fields" %>
    <%= label_tag :email %>
    <%= text_field_tag :email, "test@test.nl" %>
    <%= submit_tag t('.send_test') %>
  <% end %>

  <h2><%= t('.send_campaign_title') %></h2>
  <p><%= t('.send_campaign_explanation') %></p>
  <%= form_tag refinery.send_now_mailchimp_admin_posts_campaign_path(@posts_campaign) do -%>
    <%= render :partial => "modal_fields" %>
    <%= submit_tag t('.submit_now'), :confirm => t('.submit_confirm')%>
  <% end %>

  <h2><%= t('.schedule_campaign_title') %></h2>
  <p><%= t('.schedule_campaign_explanation') %></p>
  <%= form_tag refinery.schedule_mailchimp_admin_posts_campaign_path(@posts_campaign) do -%>
    <%= render :partial => "modal_fields" %>
    <%= label_tag :send_at %>
    <%= select_datetime %>
    <%= submit_tag t('.schedule_campaign') %>
  <% end %>
<% end %>
